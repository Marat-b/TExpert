@using TExp.Classes
@model TExp.Models.RegisterInputModel

@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>

@using (Html.BeginForm("Register","Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => Model.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => Model.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => Model.UserName)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => Model.FIO, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => Model.FIO, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => Model.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => Model.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => Model.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.ConfirmPassword, new {@class = "col-md-2 control-label"})
        <div class="col-md-4">
            @Html.PasswordFor(m => Model.ConfirmPassword, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => Model.ConfirmPassword)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.Position, new {@class = "col-md-2 control-label"})
        <div class="col-md-4">
            @Html.TextBoxFor(m => Model.Position, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => Model.Position)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.SetPasswordEnabled, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.CheckBoxFor(m => Model.SetPasswordEnabled, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => Model.SetPasswordEnabled)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Роли", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @foreach (var item in Model.userRoles)
            {
                <input type="radio" name="SelectedRole" value="@item.Name" />
                @Html.Label(item.Name, new { @class = "control-label" })
            }
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Сохранить</button>
        </div>
        <div class="col-md-offset-2 col-md-4">

            @Html.ActionlinkWithSpanForIcon(" Назад к списку", "List", new { }, new { @class = "btn btn-default" }, "glyphicon glyphicon-backward")
        </div>
    </div>

    
}