
@{
    ViewBag.Title = "Malfunction";
}

<h2>Виды неисправностей</h2>

<div>
    <div ng-controller="Gontroller">
        <p>
            <button class="btn btn-success" ng-click="createMalfunction()"><span class="glyphicon glyphicon-plus"></span></button>
        </p>
        <table class="table table-hover">
            <tr>
                <th>Ид</th>
                <th>
                    Тип неисправности
                </th>
                
                <th>Редактировать</th>
                <th>Удалить</th>
            </tr>



            <tr ng-repeat="item in typeOfMalfunction">
                <td>
                    {{item.FaultId}}
                </td>
                <td>
                    {{item.Name}}
                </td>
               
                <td>
                    <button class="btn btn-info" ng-click="edit(item.FaultId)"><span class="glyphicon glyphicon-edit"></span></button>
                </td>
                <td>
                    <button class="btn btn-warning" ng-click="delete(item.FaultId,item.Name)"><span class="glyphicon glyphicon-trash"></span></button>
                </td>
            </tr>


        </table>


        <!-- Create new Malfunction -->
        <div class="modal" id="createMalfunction" tabindex="-1" role="dialog" aria-labelledby="createMalfunctionLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                        <div class="well">
                            <h3 id="createMalfunctionLabel">{{titleAction}}</h3><span id="staffName" class="label label-info"></span>

                        </div>
                    </div>
                    <form name="formMalfunction" novalidate>
                        <div class="modal-body">
                            <input type="hidden" ng-model="formMalfunction.FaultId" />
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-4">Тип неисправности</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" ng-model="formMalfunction.Name" required />
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="form-group">
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary" ng-click="btnSave(formMalfunction.FaultId,formMalfunction)" ng-disabled="formMalfunction.$invalid">Сохранить</button>
                                </div>
                                <div class="col-md-offset-2 col-md-2">
                                    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Закрыть</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/texp-malfunction")
}

